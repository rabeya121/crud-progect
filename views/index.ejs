<%- include('layout/header') %>

<div class="container">
    <div class="row my-4">
        <div class="col-lg-12">
            <% if (message) { %>
                <div class="alert alert-dismissible fade show a alert-<%= message.type %>"role="alert">
                    <button class="btn-close" type="button" data-ds-dismiss="alert" aria-label="close"></button>
                    <strong><%= message. message%></strong>


                </div>

            <% } %>
           <div class="table-responsive">
            <% if(student != ''){ %>
                <table class="table table-striped text-center my-3">
                    <thead>
                        <tr class="table-dark">
                            <th>Id</th>
                            <th>Image</th>
                            <th>Name</th>
                            <th>E-mail</th>
                            <th>Phone</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                       <% student.forEach((row,index)=> { %>
                        <tr class="align-midddle">
                            <td><%= index %></td>
                            <td><img src="<%= row.image %>" width="50" class="image-thumbnail"/></td>
                            <td><%= row.name%></td>
                            <td><%= row.email%></td>
                            <td><%= row.phone%></td>
                            <td>
                             <a href="/edit/<%= row._id%>" class="text-success"><i class="fas fa-edit fa-lg mx-1"></i></a>
                             <a href="/delete/<%= row._id%>" class="text-danger"><i class="fas fa-trash fa-lg mx-1"></i></a>
                            </td>
                        </tr>
                       <%)} %>  
                    </tbody>
                </table>
            <% } else { %>
                <h1 class="text-center text-secondary mt-5">No student found in the database! </h1>


            <% } %>   
           
           </div>
        </div>

    </div>

</div>

<%- include('layout/footer') %>
